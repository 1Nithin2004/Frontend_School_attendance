<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#F8F9FB">

    <!-- Back Arrow -->
    <ImageView
        android:id="@+id/ivBack"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/frame"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:contentDescription="Back"
        android:padding="4dp"/>

    <!-- Title -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Student Attendance"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#000"
        android:layout_centerHorizontal="true"
        android:layout_alignTop="@id/ivBack"
        android:layout_marginTop="0dp"/>

    <!-- Circular Progress with Text -->
    <FrameLayout
        android:id="@+id/circleContainer"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/tvTitle"
        android:layout_marginTop="24dp">

        <ProgressBar
            android:id="@+id/progressAttendance"
            style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:indeterminate="false"
            android:max="100"
            android:progress="0"
            android:progressDrawable="@drawable/circular_progress"/>

        <TextView
            android:id="@+id/tvAttendancePercent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0%"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#000"
            android:layout_gravity="center"/>
    </FrameLayout>

    <!-- Details Box -->
    <LinearLayout
        android:id="@+id/detailsBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/circleContainer"
        android:layout_marginTop="24dp"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@drawable/rounded_box">

        <TextView
            android:id="@+id/tvStudentName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Student Name"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_below="@id/circleContainer"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"/>

        <TextView
            android:id="@+id/tvClassName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Class: 6"
            android:textSize="16sp"
            android:layout_below="@id/tvStudentName"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="4dp"/>

        <TextView
            android:id="@+id/tvTotalClasses"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Classes: 50"
            android:textSize="16sp"
            android:textColor="#000"/>

        <TextView
            android:id="@+id/tvAttendedClasses"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Attended Classes: 40"
            android:textSize="16sp"
            android:textColor="#000"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/tvAbsentClasses"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Absent Classes: 10"
            android:textSize="16sp"
            android:textColor="#000"
            android:layout_marginTop="8dp"/>
    </LinearLayout>

</RelativeLayout>
