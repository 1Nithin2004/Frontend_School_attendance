<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/admin_home_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F7FA">
    <!-- Profile Icon Top-Left -->
    <ImageView
        android:id="@+id/profile_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_alignParentStart="true"
        android:src="@drawable/ic_profile_circle"
        android:contentDescription="Profile Icon"
        android:background="@drawable/ic_profile_circle"
        android:scaleType="centerCrop" />


    <!-- Top Centered Admin Text -->
    <TextView
        android:id="@+id/admin_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Admin"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginTop="24dp"
        android:layout_centerHorizontal="true" />

    <!-- Logout icon top-right -->
    <ImageView
        android:id="@+id/logout_button"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:src="@drawable/ic_logout"
        android:contentDescription="Logout" />

    <!-- Options Grid -->
    <GridLayout
        android:id="@+id/grid_options"
        android:layout_below="@id/admin_name"
        android:layout_marginTop="32dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:columnCount="2"
        android:rowCount="4"
        android:alignmentMode="alignMargins"
        android:useDefaultMargins="true">

        <!-- Add Teacher -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="140dp"
            android:layout_columnWeight="1"
            android:orientation="vertical"
            android:background="@drawable/rounded_white_card"
            android:gravity="center"
            android:padding="12dp">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/addteacher" />

            <TextView
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Teacher Account"
                android:textStyle="bold"
                android:textColor="#000" />
        </LinearLayout>

        <!-- View Teachers -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="140dp"
            android:layout_columnWeight="1"
            android:orientation="vertical"
            android:background="@drawable/rounded_white_card"
            android:gravity="center"
            android:padding="12dp">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/viewteac" />

            <TextView
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View Teachers"
                android:textStyle="bold"
                android:textColor="#000" />
        </LinearLayout>

        <!-- Add Student -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="140dp"
            android:layout_columnWeight="1"
            android:orientation="vertical"
            android:background="@drawable/rounded_white_card"
            android:gravity="center"
            android:padding="12dp">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/addstu" />

            <TextView
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Student Account"
                android:textStyle="bold"
                android:textColor="#000" />
        </LinearLayout>

        <!-- View Students -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="140dp"
            android:layout_columnWeight="1"
            android:orientation="vertical"
            android:background="@drawable/rounded_white_card"
            android:gravity="center"
            android:padding="12dp">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/addstu" />

            <TextView
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View Students"
                android:textStyle="bold"
                android:textColor="#000" />
        </LinearLayout>

        <!-- View Class Reports -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="140dp"
            android:layout_columnWeight="1"
            android:orientation="vertical"
            android:background="@drawable/rounded_white_card"
            android:gravity="center"
            android:padding="12dp">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/report" />

            <TextView
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View Class Reports"
                android:textStyle="bold"
                android:textColor="#000" />
        </LinearLayout>
    </GridLayout>
</RelativeLayout>
